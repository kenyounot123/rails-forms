<% if @user.errors.any? %>

    <div id="error_explanation">
        <h2><%= pluralize(@user.errors.count, "error")%> prohibited this user from being created or edited</h2>
        <ul>
        <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
        </ul>
    </div>

<% end %>

<%= form_with model: @user do |form| %>
    <%= form.label :username %>
    <%= form.text_field :username, placeholder: "Your username here" %>
    <br>
    <%= form.label :password %>
    <%= form.password_field :password %>
    <br>
    <%= form.label :email %>
    <%= form.email_field :email, placeholder: "example@example.com", value: "john@example.com" %>
    <br>
    <%= form.submit "Submit" %>
<% end %>